<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityLayoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainActivityLayoutHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainActivityText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="MainActivityImage">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="styleName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/image</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="styleAddress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="styleStreet" parent="styleAddress">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_below">@id/name</item>
    </style>

    <style name="styleCity" parent="styleAddress">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_below">@id/street</item>
    </style>

    <style name="stylePostalCode" parent="styleAddress">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_below">@id/city</item>
    </style>

    <style name="styleDates" parent="styleAddress">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_below">@id/postalCode</item>
    </style>

    <style name="activityImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>
