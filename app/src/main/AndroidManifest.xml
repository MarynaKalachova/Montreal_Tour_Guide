<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.montrealtourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ArchitectureActivity" android:label="@string/architecture_activity"/>
        <activity android:name=".MuseumActivity" android:label="@string/museum_activity"></activity>
        <activity android:name=".FestivalActivity" android:label="@string/festivals_activity"/>
        <activity android:name=".FoodActivity" android:label="@string/food_activity"></activity>
    </application>

</manifest>